<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:id="@+id/EdtValor"
        android:layout_gravity="left|top"
        android:editable="false"
        android:background="#F5F6CE"
        android:clickable="false" />




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/EdtValor">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="MC"
            android:id="@+id/bmc"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="MR"
            android:id="@+id/bmr"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="MS"
            android:id="@+id/bms"
            android:layout_row="0"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="M+"
            android:id="@+id/bmm"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="M-"
            android:id="@+id/bmn"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:id="@+id/bflec"
            android:layout_row="1"
            android:layout_column="0"
            android:text="←" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="CE"
            android:id="@+id/bce"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="C"
            android:id="@+id/bc"
            android:layout_row="1"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="±"
            android:id="@+id/bmsns"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="√"
            android:id="@+id/brz"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="7"
            android:id="@+id/b7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="8"
            android:id="@+id/b8"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="9"
            android:id="@+id/b9"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="/"
            android:id="@+id/bdiv"
            android:layout_row="2"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="%"
            android:id="@+id/bprc"
            android:layout_row="2"
            android:layout_column="6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="4"
            android:id="@+id/b4"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="5"
            android:id="@+id/b5"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="6"
            android:id="@+id/b6"
            android:layout_row="3"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="*"
            android:id="@+id/bmul"
            android:layout_row="3"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="1/x"
            android:id="@+id/benx"
            android:layout_row="3"
            android:layout_column="6" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="1"
            android:id="@+id/b1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="2"
            android:id="@+id/b2"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="3"
            android:id="@+id/b3"
            android:layout_row="4"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="-"
            android:id="@+id/bres"
            android:layout_row="4"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="0"
            android:id="@+id/b0"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="."
            android:id="@+id/bpt"
            android:layout_row="5"
            android:layout_column="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="+"
            android:id="@+id/bsum"
            android:layout_row="5"
            android:layout_column="5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="58dp"
            android:text="="
            android:id="@+id/big"
            android:layout_row="5"
            android:layout_column="6" />

    </GridLayout>

</RelativeLayout>
